#include<stdio.h>
#include<string.h>
int yyy(char s1[], char s2[])
{
	int i=0,j=0,len,a=0;
	len=strlen(s2);
	while(s1[i])
	{
		for(j=0;j<len;j++)
		{

			if(s1[i+j]!=s2[j])
				break;
			else
				if(j==len-1)
					a++;
		}
		i++;
	}
	return a;
}
void main()
{
	char a[1000];
	char b[100];
	int  c;
	printf("输入：\n");
	gets(a);
	printf("");
	gets(b);
	strlwr(a);
	strlwr(b);
	c=yyy(a, b);
	printf("输出：%d\n",c,b);
}

